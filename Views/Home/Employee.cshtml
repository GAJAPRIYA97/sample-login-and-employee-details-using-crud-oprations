@model Myisolve.Models.EmployeeViewModel
@{
    ViewBag.Title = "Employee";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>New Employee Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
        }

        .container {
            padding: 20px 30px;
            border-radius: 10px;
            width: 100%;
            margin: auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        h2, h3 {
            margin-bottom: 20px;
            color: #333;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

            .form-group label {
                font-size: 14px;
                margin-bottom: 5px;
                color: #555;
                font-weight: 500;
            }

        .form-control {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
            width: 100%;
            box-sizing: border-box;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #007BFF;
                outline: none;
                box-shadow: 0 0 0 2px rgba(0,123,255,0.25);
            }

        input[readonly] {
            background-color: #f5f5f5;
        }

        select.form-control {
            appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 10px center;
            background-size: 16px;
            padding-right: 30px;
        }

        .form-group-full {
            grid-column: span 4;
            margin-top: 10px;
        }

        textarea.form-control {
            min-height: 80px;
            resize: vertical;
        }

        .form-actions {
            margin-top: 25px;
            text-align: right;
        }

        button {
            padding: 10px 20px;
            margin-left: 10px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button[type="submit"] {
                background: #007BFF;
                color: white;
            }

                button[type="submit"]:hover {
                    background: #0069d9;
                }

            button[type="reset"] {
                background: #6c757d;
                color: white;
            }

                button[type="reset"]:hover {
                    background: #5a6268;
                }

        .checkbox-container {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

            .checkbox-container input {
                margin-right: 8px;
                width: auto;
            }

        /* Table Styles */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th, .table td {
                text-align: left;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: grey;
                color: white;
            }

          

        .text-center {
            text-align: center;
        }

        hr {
            margin: 30px 0;
            border: 0;
            border-top: 1px solid #eee;
        }
        .container a{
            cursor:pointer;
            display:flex;
        }
    </style>
</head>
<body>
    <p>Welcome, <strong>@Session["Username"]</strong>!</p>

    <div class="container">
        <h2>New Employee</h2>
        <form method="post" action="@Url.Action("Employee", "Home")">
            <div class="form-grid">
                <div class="form-group">
                    <label>Branch Name</label>
                    <select class="form-control" name="NewEmployee.BranchName" required>
                        <option value="">-- Select Branch --</option>
                        <option value="isolve-chennai">Isolve Chennai</option>
                        <option value="isolve-madurai">Isolve Madurai</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Employee Name</label>
                    <input type="text" class="form-control" name="NewEmployee.EmployeeName" required>
                </div>
                <div class="form-group">
                    <label>Mobile No1</label>
                    <input type="text" class="form-control" name="NewEmployee.MobileNumber1" required pattern="[0-9]{10}" title="10 digit mobile number">
                </div>
                <div class="form-group">
                    <label>Mobile No2</label>
                    <input type="text" class="form-control" name="NewEmployee.Mobile_No2" pattern="[0-9]{10}" title="10 digit mobile number">
                </div>
                <div class="form-group">
                    <label>Department</label>
                    <select class="form-control" name="NewEmployee.DepartmentName" required>
                        <option value="">-- Select Department --</option>
                        <option value="Manager">Manager</option>
                        <option value="Computer Science">Computer Science</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Employee Code</label>
                    <input type="text" class="form-control" name="NewEmployee.EmployeeCode" value="Auto" readonly>
                </div>
                <div class="form-group">
                    <label>Date of Birth</label>
                    <input type="date" class="form-control" name="NewEmployee.Date_of_Birth">
                </div>
                <div class="form-group">
                    <label>Date of Join</label>
                    <input type="date" class="form-control" name="NewEmployee.DateOfJoin" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
                </div>
                <div class="form-group">
                    <label>Area</label>
                    <select class="form-control" name="NewEmployee.Area">
                        <option value="">-- Select --</option>
                        <option value="Chennai">Chennai</option>
                        <option value="Trichy">Trichy</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input type="text" class="form-control" name="NewEmployee.City" value="Auto" readonly>
                </div>
                <div class="form-group">
                    <label>State</label>
                    <input type="text" class="form-control" name="NewEmployee.State" value="Auto" readonly>
                </div>
                <div class="form-group">
                    <label>Pincode</label>
                    <input type="text" class="form-control" name="NewEmployee.Pincode" pattern="[0-9]{6}" title="6 digit pincode" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="NewEmployee.Email" required>
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <select class="form-control" name="NewEmployee.Gender" required>
                        <option value="">Select</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="NewEmployee.Username">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="NewEmployee.Password">
                </div>
                <div class="form-group">
                    <label>Qualification</label>
                    <input type="text" class="form-control" name="NewEmployee.Qualification" required>
                </div>
                <div class="form-group">
                    <label>Designation</label>
                    <input type="text" class="form-control" name="NewEmployee.Designation">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select class="form-control" name="NewEmployee.Role" required>
                        <option value="">-- Select --</option>
                        <option value="user">User</option>
                        <option value="Super">Super Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <select class="form-control" name="NewEmployee.Status" required>
                        <option value="">-- Select --</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>

            <div class="form-group-full">
                <div class="form-group">
                    <label>Present Address</label>
                    <textarea class="form-control" rows="3" name="NewEmployee.PresentAddress"></textarea>
                </div>
                <div class="checkbox-container">
                    <input type="checkbox" id="sameAddress" name="NewEmployee.SameAsPresentAddress">
                    <label for="sameAddress">Same as Present (Permanent Address)</label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit">Save</button>
                <button type="reset">Clear</button>
            </div>
        </form>
    </div>

    <div class="container">
        <h3>Employee List</h3>
        @if (Model.EmployeeList != null && Model.EmployeeList.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Branch Name</th>
                        <th>Employee Name</th>
                        <th>Mobile No 1</th>
                        <th>Department Name</th>
                        <th>Employee Code</th>
                        <th>Date Of Join</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model.EmployeeList)
                    {
                        <tr>
                            <td>@emp.BranchName</td>
                            <td>@emp.EmployeeName</td>
                            <td>@emp.MobileNumber1</td>
                            <td>@emp.DepartmentName</td>
                            <td>@emp.EmployeeCode</td>
                            <td>@(emp.DateOfJoin.HasValue ? emp.DateOfJoin.Value.ToString("yyyy-MM-dd") : "")</td>
                            <td>@emp.Email</td>
                            <td>@emp.Gender</td>
                            <td>@emp.Role</td>
                            <td>@emp.Status</td>
                            <td>
                                <a href="@Url.Action("Edit", "Home", new { id = emp.EmployeeCode })" class="btn btn-dark">Edit</a>
                                @using (Html.BeginForm("DeleteEmployee", "Home", FormMethod.Post))
                                {
                                    @Html.Hidden("id", emp.EmployeeCode)
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No employees found.</p>
        }
    </div>
</body>
@section Scripts {
    <script>
        window.onload = function () {
            var msg = '@ViewBag.PopupMessage';
            if (msg) {
                alert(msg);
            }
        };
    </script>
}

</html>

